body {
    margin:0; /* This is used to reset any browser-default margins */
}

h1, h2 {
    display: inline;
    vertical-align:baseline;
    line-height:2;
}

h4 {
    display:inline;
}

div.wrapper {
    width: 99vw;
    height: 97vh;
    position: relative;
}

div.title {
    position:static;
    top:0;
    width:100%;
    height:10%;
    background-color:green;
}

div.main {
    position: absolute;
    width: 70%;
    height: 69%;
    border-style: solid;
}

div.right {
    position: absolute;
    right:0;
    width: 29%;
    height: 69%;
    overflow-y: scroll;
    overflow-x: hidden;
}

div.bottom {
    position: absolute;
    bottom:0;
    width: 100%;
    height: 17%;
    border-style: dashed;
}

.livebtn {
    width:100%;
    height: 100%;

}
.mybtn {
    width:30%;
    height: 75%;
}

.smallbtn {
    width:49%;
    height:75%;
}

.btnPanelLeft {
    width:20%;
    height:100%;
    float:left;
}

.btnPanelMiddle {
    margin-left:1%;
    width:48%;
    height:100%;
    float:left;
}

.btnPanelRight {
    width:30%;
    height:100%;
    float:left;
    vertical-align:top;
}

.timedMessage {
    width:29%;
    height: 100%;
    float:right;
    line-height:100%;
    text-align:center;
    vertical-align: middle;
    border:solid;
}


/* Hide radio tab */
.inline-rb input[type="radio"] {
    display:none;
}

/* Set button size*/
.inline-rb {
    height:0%;
}


.inline-rb input[type="radio"]:checked + label {
    background-color:aliceblue;
}

.inline-rb label {
    display:inline-block;
    margin:-2px;
    padding: 4px 12px;
    height:200%;
    width:100%;
    background-color: #e7e7e7;
    border:1px solid; 
    border-color:lightgray;
}